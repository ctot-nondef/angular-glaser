[
  {
    "selector":"teiHeader",
    "actions":[
        {
          "setAttribute":{
            "class":"md-whiteframe-3dp",
            "layout-padding":""
          }
        },
        {
          "replaceElement":"div"
        }
    ]
  },
  {
    "selector":"facsimile",
    "actions":[
      {
        "setAttribute":{
          "class":"md-whiteframe-3dp",
          "layout-padding":""
        }
      },
      {
        "insertElement":{
          "position":"beforebegin",
          "markup":"<div layout-padding></div>"
        }
      },
      {
        "replaceElement":"div"
      }
    ]
  },
  {
    "selector":"text",
    "actions":[
      {
        "setAttribute":{
          "md-dynamic-height":"",
          "md-border-bottom":"",
          "md-selected":"0",
          "md-stretch-tabs":"always",
          "style":"width: 100%;"
        }
      },
      {
        "insertElement":{
          "position":"beforebegin",
          "markup":"<div layout-padding></div>"
        }
      },
      {
        "replaceElement":"md-tabs"
      }
    ]
  },
  {
    "selector":"title[type=alt]",
    "actions":[
        {
          "wrapElement":{
            "tag":"div",
            "attributes":{
              "layout":"row",
              "layout-align":"start center"
            }
          }
        },
        {
          "insertElement":{
            "position":"beforebegin",
            "markup":"<h3 class=\"md-subheader\"><md-icon class=\"labelicon\">bookmark</md-icon>Alternative Title:&nbsp;</h3>"
          }
        },
        {
          "replaceElement":"h5"
        }
    ]
  },
  {
    "selector":"respstmt",
    "actions":[
      {
        "wrapContent":{
          "tag":"div",
          "attributes":{
            "layout":"row",
            "layout-align":"start center"
          }
        }
      }
    ]
  },
  {
    "selector":"respstmt>div>persname",
    "actions":[
      {
        "insertElement":{
          "position":"beforebegin",
          "markup":"<h3 class=\"md-subheader\"><md-icon class=\"labelicon\">person</md-icon>Responsible:&nbsp;</h3>"
        }
      },
      {
        "insertElement":{
          "position":"afterend",
          "markup":"<span>&nbsp;/&nbsp;</span>"
        }
      },
      {
        "wrapElement":{
          "tag":"h5"
        }
      }
    ]
  },
  {
    "selector":"resp",
    "actions":[
      {
        "wrapElement":{
          "tag":"h5"
        }
      }
    ]
  },
  {
    "selector":"title",
    "actions":[
      {
        "replaceElement":"h3"
      }
    ]
  },
  {
    "selector":"publicationstmt",
    "actions":[
      {
        "wrapContent":{
          "tag":"div",
          "attributes":{
            "layout":"row",
            "layout-align":"start center"
          }
        }
      }
    ]
  },
  {
    "selector":"authority",
    "actions":[
      {
        "insertElement":{
          "position":"beforebegin",
          "markup":"<h3 class=\"md-subheader\"><md-icon class=\"labelicon\">bookmark</md-icon>License:&nbsp;</h3>"
        }
      },
      {
        "replaceElement":"h5"
      }
    ]
  },
  {
    "selector":"div[type=edition]",
    "actions":[
      {
        "setAttribute":{
          "label":"Edition"
        }
      },
      {
        "replaceElement":"md-tab"
      }
    ]
  },
  {
    "selector":"div[type=translation]",
    "actions":[
      {
        "setAttribute":{
          "label":"Translation"
        }
      },
      {
        "replaceElement":"md-tab"
      }
    ]
  },
  {
    "selector":"div[type=bibliography]",
    "actions":[
      {
        "setAttribute":{
          "label":"Bibliography"
        }
      },
      {
        "replaceElement":"md-tab"
      }
    ]
  },
  {
    "selector":"*|lb",
    "actions":[
      {
        "replaceElement":"br"
      }
    ]
  }
]
